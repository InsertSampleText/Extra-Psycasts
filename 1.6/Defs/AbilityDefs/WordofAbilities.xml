<Defs>

    <!--Word of Happiness-->
    <AbilityDef ParentName="WordOfBase">
        <defName>EP_WordOfHappiness</defName>
        <label>word of happiness</label>
        <description>Speak words of happiness and enjoyment to someone, creating a sense of joy within them and reducing their need to have fun to be happy.</description>
        <level>2</level>
        <iconPath>UI/Abilities/WordOfHappiness</iconPath>
        <casterMustBeCapableOfViolence>false</casterMustBeCapableOfViolence>
        <statBases>
            <Ability_PsyfocusCost>0.55</Ability_PsyfocusCost>
            <Ability_Duration>2400</Ability_Duration>
        </statBases>
        <verbProperties>
            <warmupTime>2</warmupTime>
            <targetParams>
                <canTargetAnimals>False</canTargetAnimals>
                <canTargetSelf>True</canTargetSelf>
                <canTargetMechs>False</canTargetMechs>
            </targetParams>
        </verbProperties>
        <comps>
            <li Class="CompProperties_AbilitySocialInteraction">
                <interactionDef>EP_PsychicHappiness</interactionDef>
            </li>
            <li Class="CompProperties_AbilityGiveHediff">
                <compClass>CompAbilityEffect_GiveHediff</compClass>
                <hediffDef>EP_Happiness</hediffDef>
                <psychic>True</psychic>
                <onlyBrain>True</onlyBrain>
                <applicableToMechs>False</applicableToMechs>
                <durationMultiplier>PsychicSensitivity</durationMultiplier>
            </li>
        </comps>
    </AbilityDef>

