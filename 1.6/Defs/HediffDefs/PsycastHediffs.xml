<Defs>

    <!--Bolster Immunity-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_BolsterImmunity</defName>
        <label>psychic immunity boost</label>
        <description>Psychically-induced immune system boost.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <statOffsets>
                    <ImmunityGainSpeed>0.25</ImmunityGainSpeed>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>

    <!--Bolster
    Clotting-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_BolsterClotting</defName>
        <label>psychic clotting boost</label>
        <description>Psychically-induced clotting boost.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <totalBleedFactor>0.6</totalBleedFactor>
            </li>
        </stages>
    </HediffDef>

    <!--Bolster
    Healing-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_BolsterHealing</defName>
        <label>psychic healing boost</label>
        <description>Psychically-induced healing boost.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <naturalHealingFactor>1.5</naturalHealingFactor>
            </li>
        </stages>
    </HediffDef>

    <!--Pain
    boost-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_PsychicPain</defName>
        <label>psychic pain boost</label>
        <description>Psychically-induced increased pain sensitivity.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <painFactor>1.5</painFactor>
            </li>
        </stages>
    </HediffDef>

    <!--Unburden-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_UnBurden</defName>
        <label>psychic unburden</label>
        <description>Psychically-induced ease in locomotion.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>0.5</offset>
                    </li>
                </capMods>
            </li>
        </stages>
    </HediffDef>

    <!--Word
    of Happiness-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_Happiness</defName>
        <label>psychic happiness</label>
        <description>Psychically-induced feelings of happiness. Reduces the need for recreation.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <statFactors>
                    <JoyFallRateFactor>0.5</JoyFallRateFactor>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

    <!--Bleed
    Wounds-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_BleedWounds</defName>
        <label>psychic wound bleed</label>
        <description>The ability to clot wounds is psychically weakened, leading to more bleeding.</description>
        <isBad>true</isBad>
        <stages>
            <li>
                <totalBleedFactor>1.5</totalBleedFactor>
            </li>
        </stages>
    </HediffDef>


    <!--Grav
    Field-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_GravField</defName>
        <label>psychic low grav field</label>
        <description>A thin skipgate that surrounds the target and creates a slightly lowers
            gravity, allowing for slightly faster movement due to being a slightly lighter weight.</description>
        <isBad>true</isBad>
        <stages>
            <li>
                <capMods>
                    <li>
                        <capacity>Moving</capacity>
                        <offset>.15</offset>
                    </li>
                </capMods>
                <statOffsets>
                    <CrawlSpeed>0.15</CrawlSpeed>
                    <TrapSpringChance>-0.5</TrapSpringChance>
                    <CarryingCapacity>0.1</CarryingCapacity>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>


    <!--Temp
    Barrier-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_TempBarrier</defName>
        <label>psychic temperature barrier</label>
        <description>A thin skipgate that surrounds the target and creates a layer of insulation
            with air
            that protects against high and low temperatures.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <statOffsets>
                    <ComfyTemperatureMin>-32</ComfyTemperatureMin>
                    <ComfyTemperatureMax>32</ComfyTemperatureMax>
                </statOffsets>
            </li>
        </stages>
    </HediffDef>


    <!--Word
    of Misery-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_Misery</defName>
        <label>psychic misery</label>
        <description>Psychically-induced feelings of misery. Increases mental break threshold.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <statFactors>
                    <MentalBreakThreshold>1.15</MentalBreakThreshold>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

    <!--Word
    of Resolve-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_Resolve</defName>
        <label>psychic resolve</label>
        <description>Psychically-enhanced resolve. Decreases mental break threshold and global
            certaintity loss factor.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <statFactors>
                    <MentalBreakThreshold>.5</MentalBreakThreshold>
                    <CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">0.5</CertaintyLossFactor>
                    <PainShockThreshold>0.2</PainShockThreshold>
                </statFactors>
            </li>
        </stages>
    </HediffDef>

    <!--Word
    of Doubt-->
    <HediffDef ParentName="PsycastHediffBase">
        <defName>EP_Doubt</defName>
        <label>psychic doubt</label>
        <description>Psychically-induced doubt. Increases global certaintity loss factor.</description>
        <isBad>false</isBad>
        <stages>
            <li>
                <statFactors>
                    <CertaintyLossFactor MayRequire="Ludeon.RimWorld.Ideology">1.5</CertaintyLossFactor>
                </statFactors>
            </li>
        </stages>
    </HediffDef>


